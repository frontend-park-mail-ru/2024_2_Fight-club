<div class="short-card">
    <div class="short-card__main-info">
        <div class="short-card__img-container">
            <img src="{{this.author.avatar}}" height="80" width="80">
        </div>
        <div class="short-card__name-container">
            <p class="short-card__name-container__name">{{this.author.name}}</p>
            <span class="short-card__rating-container">
                <img src="/star.png" height="16" width="16">
                <p class="short-card__rating-container__rating">{{this.author.rating}}</p>
            </span>
            <span class="short-card__location-container">
                <img src="/svg/location.svg" width="18" height="18">
                <p class="short-card__location-container__address">{{this.cityName}}</p>
            </span>
        </div>
    </div>

    <div class="short-card__description">
        {{this.description}}
    </div>

    <div class="short-card__additional-info">
        <div class="short-card__row">
            <span class="short-card__row__title">Пол/Возраст</span>
            <span class="short-card__row__value">Муж./46</span>
        </div>
        <div class="short-card__row">
            <span class="short-card__row__title">Всего гостей:</span>
            <span class="short-card__row__value">19</span>
        </div>
        <div class="short-card__row">
            <span class="short-card__row__title">На сервисе с</span>
            <span class="short-card__row__value">2024г.</span>
        </div>
    </div>

    <div class="short-card__button-container">
        <button>Напиши мне!</button>
    </div>
</div>