<div class='ad-page'>
    <main>
        <div class='advert-images-carousel'>
            <div class='advert-images-carousel__main-img-div js-main-img-div'>
                <img class='advert-images-carousel__img-background' />
                <img class='advert-images-carousel__main-img' />
            </div>
            <div
                class='advert-images-carousel__secondary_images js-secondary-images-container'
            >
                {{#each images}}
                    <img
                        class='advert-images-carousel__secondary_img js-carousel-img'
                        src='{{this}}'
                    />
                {{/each}}
                <input type='file' hidden class='js-file-input' />
                <svg
                    class='advert-images-carousel__secondary_img js-add-img-btn'
                    width='82'
                    height='82'
                    viewBox='0 0 82 82'
                    fill='none'
                    xmlns='http://www.w3.org/2000/svg'
                >
                    <rect
                        x='0.5'
                        y='0.5'
                        width='81'
                        height='81'
                        rx='9.5'
                        stroke='black'
                    />
                    <path
                        d='M40 42H34V40H40V34H42V40H48V42H42V48H40V42Z'
                        fill='#1D1B20'
                    />
                </svg>
            </div>
        </div>

        <form class='ad-page__edit-form js-form'>
            {{#each inputs}}
                <label for='{{this.name}}'>{{this.label}}</label>
                {{#if this.isTextArea}}
                    <textarea
                        class='ad-page__edit-form__text-area'
                        rows='10'
                        name='{{this.name}}'
                    ></textarea>
                {{else}}
                    <input
                        class='ad-page__edit-form__input'
                        name='{{this.name}}'
                        placeholder='{{this.placeholder}}'
                        type='{{this.type}}'
                        minlength='{{this.minLen}}'
                        maxlength='{{this.maxLen}}'
                        {{!-- required='{{this.required}}' --}}
                    />
                {{/if}}
            {{/each}}
            <button class='ad-page__btn'>Добавить</button>
        </form>
    </main>

    <div
        class='ad-page__fullscreen-overlay ad-page__fullscreen-overlay_hidden js-fullscreen-overlay'
    >
        <img
            class='ad-page__fullscreen-overlay__image js-main-image-fullscreen'
        />
    </div>

    <aside class='profile-container'>
        <div class='profile-container__center'>
            <div class='profile-container__photo'>
                <img
                    src='../../images/default_user_icon.png'
                    class='profile-container__photo__img1'
                />
            </div>
            <p class='profile-container__p1'>{{author.name}}</p>
            <p class='profile-container__p2'>{{author.locationMain}}</p>
            <hr class='profile-container__hr' />
        </div>

        <div class='profile-container__div'>
            <div class='profile-container__p'>Рейтинг:</div>
            <div class='profile-container__info'>
                <span class='profile-container__score-container'>
                    <img
                        class='profile-container__img2'
                        src='../../images/star.png'
                        alt='star'
                    />
                    <span
                        class='profile-container__score'
                    >{{author.score}}</span>
                </span>
            </div>
        </div>
        <div class='profile-container__div'>
            <div class='profile-container__p'>Пол:</div>
            <p class='profile-container__info'>{{author.sex}}</p>
        </div>
        <div class='profile-container__div'>
            <div class='profile-container__p'>Возраст:</div>
            <p class='profile-container__info'>{{author.age}}</p>
        </div>

        <button class='profile-container__write-msg-button'>Напишите Leo прямо
            сейчас
        </button>

        <a class='profile-container__show-on-map-button'>Показать на карте</a>
    </aside>
</div>